{
    "$schema": "https://opencode.ai/config.json",
    "theme": "tokyonight",
    "keybinds": {
        "messages_half_page_down": "alt+d",
        "messages_half_page_up": "alt+u",
        "messages_next": "ctrl+j",
        "messages_previous": "ctrl+k",
        "input_clear": "ctrl+u",
        "messages_last": "ctrl+alt+g",
        "input_newline": "ctrl+enter",
        "session_interrupt": "ctrl+c",
        "app_exit": "<leader>q"
    },
    "lsp": {
        "clangd": {
            "command": [
                "clangd",
                "--background-index",
                "--header-insertion=never",
                "--clang-tidy"
            ],
            "extensions": [
                ".c",
                ".cpp",
                ".h",
                ".hpp",
                ".cc",
                ".hh"
            ]
        },
        "rust-analyzer": {
            "command": [
                "rust-analyzer"
            ],
            "extensions": [
                ".rs"
            ]
        },
        "basedpyright": {
            "command": [
                "basedpyright"
            ],
            "extensions": [
                ".py"
            ]
        },
    },
    "layout": "stretch"
}
