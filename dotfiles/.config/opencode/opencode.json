{
    "$schema": "https://opencode.ai/config.json",
    "theme": "tokyonight",
    "keybinds": {
        "messages_half_page_down": "alt+d",
        "messages_half_page_up": "alt+u",
        "input_clear": "ctrl+u",
        "messages_last": "ctrl+alt+g",
        "input_newline": "ctrl+enter",
        "session_interrupt": "ctrl+c",
        "app_exit": "<leader>q"
    },
    "lsp": {
        "clangd": {
            "command": [
                "clangd",
                "--background-index",
                "--header-insertion=never",
                "--clang-tidy"
            ],
            "extensions": [
                ".c",
                ".cpp",
                ".h",
                ".hpp",
                ".cc",
                ".hh"
            ]
        },
        "rust-analyzer": {
            "command": [
                "rust-analyzer"
            ],
            "extensions": [
                ".rs"
            ]
        },
        "basedpyright": {
            "command": [
                "basedpyright"
            ],
            "extensions": [
                ".py"
            ]
        },
    },
    "provider": {
        "ollama": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Ollama",
            "options": {
                "baseURL": "http://100.64.0.3:11434/v1",
            },
            "models": {
                "qwen3-next:80b": {
                    "name": "qwen3-next:80b"
                },
                "deepseek-r1:8b": {
                    "name": "deepseek-r1:8b"
                },
                "qwen3-coder:30b-256k": {
                    "name": "qwen3-coder:30b-256k",
                },
                "mistral-small3.2:24b": {
                    "name": "mistral-small3.2:24b"
                }
            }
        }
    },
    "layout": "stretch"
}
