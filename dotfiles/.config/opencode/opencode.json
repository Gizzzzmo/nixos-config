{
    "$schema": "https://opencode.ai/config.json",
    "theme": "tokyonight",
    "keybinds": {
        "messages_half_page_down": "ctrl+d",
        "messages_half_page_up": "ctrl+u",
        "messages_next": "ctrl+j",
        "messages_previous": "ctrl+k",
        "input_clear": "ctrl+u",
        "messages_last": "ctrl+alt+g",
        "input_newline": "ctrl+enter",
        "session_interrupt": "ctrl+c",
        "app_exit": "<leader>q"
    },
    "lsp": {
        "clangd": {
            "command": [
                "clangd",
                "--background-index",
                "--header-insertion=never",
                "--clang-tidy",
                "--resource-dir=/home/jonas/.cmaketoolchains/downloads/clang+llvm-18.1.8-x86_64-linux-gnu-ubuntu-18.04/lib/clang/18"
            ],
            "extensions": [
                ".c",
                ".cpp",
                ".h",
                ".hpp",
                ".cc",
                ".hh"
            ]
        }
    },
    "layout": "stretch"
}
